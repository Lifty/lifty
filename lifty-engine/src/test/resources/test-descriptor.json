{
    "sources" : [
      { "name" : "snippet",
        "url"  : "https://raw.github.com/Lifty/Lifty-engine/xlifty/lifty-engine/src/test/resources/snippet.ssp"
      }
    ],
    "templates" : [
        {   "name"          : "snippet",
            "description"   : "creates a snippet",
            "arguments"     : [
                {   "name"          :   "snippetName" },
                {   "name"          :   "snippetpack",
                    "default"       :   "{package}"}
            ],
            "files"         : [
                {   "file"          : "snippet.ssp",
                    "destination"   : "src/main/scala/${snippetpack}/${snippetName}.scala"
                }
            ]
        }
  ]
}